  "authors": [
    "Rose",
    "Qendolin",
    "Oribuin",
    "Gahaha"
  ],
  "contact": {
    "homepage": "https://github.com/Oribuin/BetterUIScale",
    "sources": "https://github.com/Oribuin/BetterUIScale",
    "issues": "https://github.com/Oribuin/BetterUIScale"
  },

  "license": "CC0-1.0",
  "icon": "assets/betteruiscale/icon.png",

